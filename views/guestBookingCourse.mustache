<html>
    <head>
        {{>header}}
    </head>
    <body class="bg-dark">
        <div class="container">
            <div class="card bg-info">
                <div class="card-body mx-3 mt-3 rounded-top bg-warning">
                    {{>websiteHeading}}
                    {{>buttonsIndex}}
                </div>
                <div class="card-body mt-2  bg-info align-content-center">                        
                    <div class="card-title mt-2 mx-3 p-2 bg-warning text-center rounded-top">
                        <h2 class="m-0">Guest Course Booking Form</h2>
                    </div>
                    
                    {{#courseDetails}}
                    <div class="card-body p-2 bg-info mx-3 mt-2">
                        <div class="row">
                            <!-- Left Column -->
                            <div class="col-md-8 d-flex flex-column ">
                                <div class="border border-dark rounded bg-primary h-100">
                                    <div class="card-header p-2 d-flex bg-warning rounded-top">
                                        <div class="col-md-8">                                        
                                            <p class="mb-0 fw-bold d-inline">Course: <span class="fs-4 fw-bold">{{course_title}}</span></p>
                                        </div>
                                        <div class="col-md-4 text-end">
                                            <p class="card-text mb-0 fw-bold d-inline">Cost: <span class="fw-bold fs-4">Â£{{cost}}</span></p>
                                        </div>
                                    </div>
                                    
                                    <div class="card-body mt-2 p-3 flex-grow-1">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group mb-3">
                                                    <p class="fw-bold mb-1">Location:</p>
                                                    <div class="card-text p-2 bg-light rounded">
                                                        {{location}}
                                                    </div>
                                                </div>

                                                <div class="form-group mb-3">
                                                    <p class="fw-bold mb-1">Duration:</p>
                                                    <div class="card-text p-2 bg-light rounded">
                                                        {{course_duration}} weeks
                                                    </div>
                                                </div>

                                                <div class="form-group mb-3">
                                                    <p class="fw-bold mb-1">Class Duration:</p>
                                                    <div class="card-text text-end p-2 bg-light rounded">
                                                        {{class_duration}} hrs/class
                                                    </div>
                                                </div>
                                                
                                            </div>
                                            
                                            <div class="col-md-6">
                                                <div class="form-group mb-3">
                                                    <p class="fw-bold mb-1">Start Date:</p>
                                                    <div class="card-text p-2 bg-light rounded">
                                                        {{start_date}}
                                                    </div>
                                                </div>
                                                
                                                <div class="form-group mb-3">
                                                    <p class="fw-bold mb-1">Class Time:</p>
                                                    <div class="card-text p-2 bg-light rounded">
                                                        {{class_start_time}}
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        
                                        <div class="mt-3">
                                            <p class="fw-bold mb-1">Description:</p>
                                            <textarea class="bg-light form-control" rows="4" readonly>{{description}}</textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Right Column -->
                            <div class="col-md-4">
                                <div class="border bg-primary border-dark rounded h-100 d-flex flex-column">
                                    <div class="card-header p-2 text-center bg-warning rounded-top">
                                        <p class="mb-0 fw-bold fs-4">Guest Details</p>
                                    </div>
                                    
                                    <div class="card-body p-3 flex-grow-1">
                                        <form method="POST" action="/guest_book_course/{{_id}}" class="h-100 d-flex flex-column">
                                            <div class="form-group mb-3">
                                                <label class="fw-bold">Email</label>
                                                <input type="email" name="guestEmail" placeholder="enter email" class="bg-light form-control {{#errors.guestEmail}}is-invalid{{/errors.guestEmail}}" 
                                                    value="{{formData.guestEmail}}" required>
                                                {{#errors.guestEmail}}
                                                    <div class="invalid-feedback">{{errors.guestEmail.msg}}</div>
                                                {{/errors.guestEmail}}
                                            </div>
                                            
                                            <div class="form-group mb-3">
                                                <label class="fw-bold">First Name</label>
                                                <input type="text" name="firstName" placeholder="enter first name" class="bg-light form-control {{#errors.firstName}}is-invalid{{/errors.firstName}}" 
                                                    value="{{formData.firstName}}" required>
                                                {{#errors.firstName}}
                                                    <div class="invalid-feedback">{{errors.firstName.msg}}</div>
                                                {{/errors.firstName}}
                                            </div>
                                            
                                            <div class="form-group mb-3">
                                                <label class="fw-bold">Surname</label>
                                                <input type="text" name="surname" placeholder="enter surname" class="bg-light form-control {{#errors.surname}}is-invalid{{/errors.surname}}" 
                                                    value="{{formData.surname}}" required>
                                                {{#errors.surname}}
                                                    <div class="invalid-feedback">{{errors.surname.msg}}</div>
                                                {{/errors.surname}}
                                            </div>
                                            
                                            <div class="mt-auto pt-3 text-end">
                                                <button type="submit" class="border border-success rounded btn btn-dark">Confirm Booking</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/courseDetails}}
                </div>
            </div>
        </div>
    </body>
</html>